<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditarUsuarioActivity">

    <TextView
            android:text="@string/usr_apellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewApellido"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewNombre" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" app:layout_constraintEnd_toEndOf="@+id/textViewNombre"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/usr_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNombre"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"/>
    <TextView
            android:text="@string/usr_correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCorreo"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewApellido" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/textViewApellido"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/actualizarText_usuario_nombre" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textViewNombre"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.563"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/actualizarText_usuario_apellido" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/actualizarText_usuario_nombre"
            app:layout_constraintStart_toEndOf="@+id/textViewApellido" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/actualizarText_usuario_email" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/actualizarText_usuario_apellido" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textViewCorreo"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="@string/btn_actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_actualizar_usuario" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewCorreo"/>
    <Button
            android:text="@string/btn_eliminar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_eliminar_usuario" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/actualizarText_usuario_email"
            app:layout_constraintStart_toEndOf="@+id/button_actualizar_usuario" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.936"/>
    <Button
            android:text="@string/btn_regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_regresar_usuario" app:layout_constraintEnd_toEndOf="@+id/button_actualizar_usuario"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/button_actualizar_usuario"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.875"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button_actualizar_usuario"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="@string/btn_ingreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_regresar_usuario" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/button_eliminar_usuario" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button_eliminar_usuario"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.348"/>

</android.support.constraint.ConstraintLayout>