<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="143dp"
            android:layout_height="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/bienvenida"
            android:textAlignment="center" android:textSize="24sp" android:id="@+id/textView"
            android:layout_marginTop="52dp"/>
    <Button
            android:text="@string/btn_usuarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_usuarios" android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"/>
    <Button
            android:text="@string/btn_registro"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:id="@+id/button_registro" app:layout_constraintEnd_toEndOf="@+id/button_usuarios"
            app:layout_constraintStart_toStartOf="@+id/button_usuarios" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/button_usuarios" app:layout_constraintHorizontal_bias="0.521"/>

</android.support.constraint.ConstraintLayout>