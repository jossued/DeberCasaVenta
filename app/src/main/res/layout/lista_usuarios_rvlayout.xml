<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="120dp" android:id="@+id/relative_layout_usuarios">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="TextView"
                android:layout_width="92dp"
                android:layout_height="35dp" android:id="@+id/textView_nombre" android:layout_weight="1"
                android:layout_marginTop="56dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:text="TextView"
                android:layout_width="107dp"
                android:layout_height="37dp" android:id="@+id/textView_apellido" android:layout_weight="1"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView_nombre"
                app:layout_constraintStart_toEndOf="@+id/textView_nombre" android:layout_marginStart="32dp"
                app:layout_constraintTop_toTopOf="@+id/textView_nombre"
                app:layout_constraintVertical_bias="0.0"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button_ver_usuario" android:layout_weight="1"
                android:text="@string/btn_ver"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/textView_apellido"
                app:layout_constraintBottom_toBottomOf="@+id/textView_apellido"
                app:layout_constraintStart_toEndOf="@+id/textView_apellido" android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>
